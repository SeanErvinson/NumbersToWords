<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bgColor">@color/colorWhite</item>
        <item name="textColor">@color/colorLightText</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="BaseTextView">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="HeaderTextView" parent="BaseTextView">
        <item name="android:layout_marginBottom">@dimen/StandardSmallPadding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkTint</item>
        <item name="bgColor">@color/colorDarkBg</item>
        <item name="textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
