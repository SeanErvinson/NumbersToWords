<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/XLargePadding"
    tools:context=".AboutActivity">


    <LinearLayout
        android:id="@+id/linear_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/StandardPadding"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:contentDescription="@string/application_logo"
            android:src="@drawable/ic_numbertoword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/StandardSmallPadding"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/LargeTextSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/StandardSmallPadding"
            android:gravity="center"
            android:text="@string/created_by"
            android:textSize="@dimen/SmallTextSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/credit"
            android:textAlignment="center"
            android:textSize="@dimen/NormalTextSize" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_info"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/text_view_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/StandardSmallPadding"
            android:drawablePadding="@dimen/StandardSmallPadding"
            android:drawableStart="@drawable/ic_github"
            android:padding="5dp"
            android:text="@string/social_github"
            android:textSize="@dimen/NormalTextSize" />


        <TextView
            android:id="@+id/text_view_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_github"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/StandardSmallPadding"
            android:drawablePadding="@dimen/StandardSmallPadding"
            android:drawableStart="@drawable/ic_linkedin"
            android:padding="5dp"
            android:text="@string/social_linkedin"
            android:textSize="@dimen/NormalTextSize" />


        <TextView
            android:id="@+id/text_view_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_linkedin"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/StandardSmallPadding"
            android:drawablePadding="@dimen/StandardSmallPadding"
            android:drawableStart="@drawable/ic_twitter"
            android:padding="5dp"
            android:text="@string/social_twitter"
            android:textSize="@dimen/NormalTextSize" />

    </RelativeLayout>
</RelativeLayout>